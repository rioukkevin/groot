{
  "extends": ["next/core-web-vitals", "next/typescript", "plugin:tailwindcss/recommended", "plugin:import/recommended"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "react/jsx-sort-props": [
      "error",
      {
        "callbacksLast": true,
        "shorthandFirst": false,
        "shorthandLast": false,
        "multiline": "ignore",
        "ignoreCase": true,
        "noSortAlphabetically": false,
        "reservedFirst": true,
        "locale": "en"
      }
    ]
  }
}
